<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovies">

    <ProgressBar
        android:id="@+id/pb_movies_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_poster_movies_detail"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:scaleType="center"
        android:src="@drawable/ic_camera_alt_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_title_movies_detail" />

    <TextView
        android:id="@+id/tv_title_movies_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_movies_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_description_movies_detail"
        android:text="Title"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        style="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_description_movies_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_movies_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_favorite_movies_detail"
        android:text="Description"
        android:textSize="14dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        style="bold"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_favorite_movies_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="favorite"
        app:layout_constraintTop_toBottomOf="@id/tv_description_movies_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>